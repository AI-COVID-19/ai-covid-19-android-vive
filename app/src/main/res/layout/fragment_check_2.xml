<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_check_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    tools:context=".PatientCheckActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:layout_margin="@dimen/fragment_margin"
        android:padding="@dimen/fragment_padding_extended">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_txt_margin_title_1"
                    android:lines="2"
                    android:text="@string/check_2_q_1"
                    android:textAppearance="@style/TextAppearance.Large" />
            <RadioGroup
                android:id="@+id/temperature"
                android:transitionGroup="true"
                >

                <RadioButton
                    android:id="@+id/temperature_range_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_1_a_1"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/temperature_range_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_1_a_2"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/temperature_range_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_1_a_3"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/temperature_range_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_1_a_4"
                    android:textAppearance="@style/TextAppearance.Small" />
            </RadioGroup>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_txt_margin_title_1"
                android:lines="2"
                android:text="@string/check_2_q_2"
                android:textAppearance="@style/TextAppearance.Large" />
            <RadioGroup
                android:id="@+id/breath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionGroup="true">

                <RadioButton
                    android:id="@+id/breath_range_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_2_a_1"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/breath_range_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_2_a_2"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/breath_range_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_2_a_3"
                    android:textAppearance="@style/TextAppearance.Small" />

                <RadioButton
                    android:id="@+id/breath_range_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_2_q_2_a_4"
                    android:textAppearance="@style/TextAppearance.Small" />
            </RadioGroup>
        </TableLayout>

        <com.kusu.loadingbutton.LoadingButton
            android:id="@+id/button_next_check_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/activity_txt_margin_section"
            android:layout_marginBottom="16dp"
            android:elevation="@dimen/button_elevation"
            android:enabled="false"
            android:text="@string/next_title"
            android:textAllCaps="false"
            android:textColor="@color/colorFontForDarkBackground"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintVertical_bias="1.0"
            app:lb_buttonColor="@color/colorPrimary"
            app:lb_isCircular="false"
            app:lb_isShadowEnable="true"
            app:lb_shadowColor="@color/colorRipple"
            app:lb_shadowHeight="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>